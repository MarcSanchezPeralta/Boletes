En aquet programa farem que una bola reboti en les dos parets del rectangle

int dreta =0;
int rebot =2;

void setup() {
size(600,200);
}

void draw() {
  dreta=dreta+rebot;
  
  if(dreta>600){
  rebot=-2;
  dreta = dreta +rebot; }
  
  if(dreta<0){
  rebot=2;
  dreta=dreta +rebot;}
  
  background(250);
  fill(255,0,0);
  ellipse(dreta,100,50,50);
 }
